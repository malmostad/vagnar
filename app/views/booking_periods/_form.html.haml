.box-content
  = simple_form_for @booking_period, html: { class: "basic" } do |f|
    = f.error_notification class: "warning"

    = f.input :starts_at, as: :string, wrapper: :datepicker
    = f.input :ends_at, as: :string, wrapper: :datepicker
    = f.input :booking_date_starts_at, as: :string, wrapper: :datepicker
    = f.input :booking_time_starts_at, input_html: { type: :time }
    = f.input :booking_date_ends_at, as: :string, wrapper: :datepicker
    = f.input :booking_time_ends_at, input_html: { type: :time }

    = render 'application/submit', form: f, cancel_path: booking_periods_path
