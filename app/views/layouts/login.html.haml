!!! 5
%html
  %head
    %meta{ charset: 'utf-8' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    %meta{ name: 'robots', content: 'noindex, nofollow' }
    %title= page_title
    /[if IE]
      %meta{ "http-equiv" => "X-UA-Compatible", "content" => "IE=edge"}
    = stylesheet_link_tag "#{APP_CONFIG['assets_url_base']}malmo.css", media: 'all'
    = stylesheet_link_tag 'application', media: 'all'
    %link{ rel: 'icon', type: 'image/x-icon', href: "#{APP_CONFIG['assets_url_base']}favicon.ico" }
    = csrf_meta_tags
  %body.mf-v4.login{ class: @body_classes }

    .wrapper
      = render "layouts/breadcrumbs"
      - flash.each do |key, value|
        %p{ class: "flash #{key}" }= value
      = yield

    = javascript_include_tag "#{APP_CONFIG['assets_url_base']}malmo_s.js"
    = javascript_include_tag 'application'
