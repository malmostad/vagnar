- title "Bokningar"
%section.box.index
  %h1.box-title= h1
  %table.full.wrap
    %thead
      %tr
        %td{ colspan: 3 }
          .actions= link_to t('actions.new'), new_booking_path, class: "btn btn-primary"
      %tr
        %th Plats
        %th Tid
        %th

    %tbody
      - @bookings.each do |booking|
        %tr
          %td= link_to 'Redigera', edit_booking_path(booking)
          %td= booking.time_slot
          %td.delete= button_to t('actions.delete'), booking, method: :delete, data: { confirm: 'Är du säker?' }, class: "btn btn-danger btn-sm"
      %tr
        %td{ colspan: 3 }
          .actions= link_to t('actions.new'), new_booking_path, class: "btn btn-primary"
