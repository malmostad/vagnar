%h1.box-title= h1
%table.full.wrap
  %tbody
    %thead
      %tr
        %th Plats
        %th Aktör
        %th Dag
        %th Tid
        %th

      %tbody
        - @bookings.each do |booking|
          %tr
            %td= booking.place.name
            %td= booking.company&.name
            %td= booking.date
            %td= interval(booking.time_slot)
            - if booking.free?
              %td
                .actions= link_to 'Boka', edit_booking_path(booking), class: "btn btn-primary btn-sm"
            - else
              %td.delete= button_to 'Avboka', booking_path(booking),
                method: :delete, data: { confirm: 'Är du säker på att du vill avboka?' }, class: "btn btn-danger btn-sm"
