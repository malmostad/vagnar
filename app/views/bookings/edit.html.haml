- title "#{t('actions.edit')} bokning"
%section.box.form
  %h1.box-title= h1
  = render 'form'

  .box-content
    - if @booking.past
      .help-block En boking i arkivet går inte att radera eftersom den visas i bokningshistoriken.
    - else
      .delete= button_to t('actions.delete'), @time_slot, method: :delete, data: { confirm: 'Är du säker?' }, class: "btn btn-danger btn-sm"
